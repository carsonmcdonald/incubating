{
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "commonjs",
            "sourceMap": true,
        },
        "include": [
            "test/**/*"
        ]
    },
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "outDir": "dist"
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}